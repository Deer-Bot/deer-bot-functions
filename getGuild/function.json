{
  "bindings": [
    {
      "authLevel": "anonymous",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [
        "get"
      ]
    },
    {
      "type": "cosmosDB",
      "name": "guildIn",
      "databaseName": "deer-bot-db",
      "collectionName": "Guilds",
      "connectionStringSetting": "COSMOS_CONNECTION_STRING",
      "direction": "in",
      "sqlQuery": "SELECT * FROM c WHERE c.guild = {guild}",
      "PartitionKey": "{guild}"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "$return"
    }
  ]
}
