{
  "bindings": [
    {
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [
        "post"
      ]
    },
    {
      "type": "http",
      "direction": "out",
      "name": "$return"
    },
    {
      "type": "cosmosDB",
      "name": "guildIn",
      "databaseName": "deer-bot-db",
      "collectionName": "Guilds",
      "connectionStringSetting": "COSMOS_CONNECTION_STRING",
      "direction": "in",
      "sqlQuery": "SELECT * FROM c where c.guild = {guild}",
      "PartitionKey": "{guild}"
    },
    {
      "type": "cosmosDB",
      "name": "guildOut",
      "databaseName": "deer-bot-db",
      "collectionName": "Guilds",
      "createIfNotExists": false,
      "connectionStringSetting": "COSMOS_CONNECTION_STRING",
      "direction": "out"
    }
  ]
}
