{
  "bindings": [
    {
      "authLevel": "anonymous",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [
        "post"
      ]
    },
    {
      "type": "cosmosDB",
      "name": "eventIn",
      "databaseName": "deer-bot-db",
      "collectionName": "Events",
      "connectionStringSetting": "COSMOS_CONNECTION_STRING",
      "direction": "in",
      "sqlQuery": "SELECT * FROM e WHERE e.id = {eventId}"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "$return"
    },
    {
      "type": "cosmosDB",
      "name": "eventOut",
      "databaseName": "deer-bot-db",
      "collectionName": "Events",
      "createIfNotExists": false,
      "connectionStringSetting": "COSMOS_CONNECTION_STRING",
      "direction": "out"
    }
  ]
}
